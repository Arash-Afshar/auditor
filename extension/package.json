{
  "name": "auditor",
  "displayName": "auditor",
  "description": "Track and manage audits/reviews of large code changes",
  "repository": "https://github.com/Arash-Afshar/auditor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auditor.markAsReviewed",
        "title": "Mark lines as reviewed"
      },
      {
        "command": "auditor.markAsModified",
        "title": "Mark lines as modified"
      },
      {
        "command": "auditor.clearReviews",
        "title": "Mark lines as cleared"
      },
      {
        "command": "auditor.createNote",
        "title": "Create Note",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "auditor.replyNote",
        "title": "Reply",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "auditor.editNote",
        "title": "Edit",
        "icon": {
          "dark": "resources/edit_inverse.svg",
          "light": "resources/edit.svg"
        }
      },
      {
        "command": "auditor.deleteNote",
        "title": "Delete",
        "icon": {
          "dark": "resources/close_inverse.svg",
          "light": "resources/close.svg"
        }
      },
      {
        "command": "auditor.deleteNoteComment",
        "title": "Delete",
        "icon": {
          "dark": "resources/close_inverse.svg",
          "light": "resources/close.svg"
        }
      },
      {
        "command": "auditor.saveNote",
        "title": "Save"
      },
      {
        "command": "auditor.cancelsaveNote",
        "title": "Cancel"
      },
      {
        "command": "auditor.startDraft",
        "title": "Start Draft",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "auditor.finishDraft",
        "title": "Finish Draft"
      },
      {
        "command": "auditor.dispose",
        "title": "Remove All Notes"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "auditor.createNote",
          "when": "false"
        },
        {
          "command": "auditor.replyNote",
          "when": "false"
        },
        {
          "command": "auditor.deleteNote",
          "when": "false"
        },
        {
          "command": "auditor.deleteNoteComment",
          "when": "false"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "auditor.deleteNote",
          "group": "navigation",
          "when": "commentController == comment-sample && !commentThreadIsEmpty"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "auditor.createNote",
          "group": "inline",
          "when": "commentController == comment-sample && commentThreadIsEmpty"
        },
        {
          "command": "auditor.replyNote",
          "group": "inline",
          "when": "commentController == comment-sample && !commentThreadIsEmpty"
        },
        {
          "command": "auditor.startDraft",
          "group": "inline",
          "when": "commentController == comment-sample && commentThreadIsEmpty"
        },
        {
          "command": "auditor.finishDraft",
          "group": "inline",
          "when": "commentController == comment-sample && commentThread == draft"
        }
      ],
      "comments/comment/title": [
        {
          "command": "auditor.editNote",
          "group": "group@1",
          "when": "commentController == comment-sample"
        },
        {
          "command": "auditor.deleteNoteComment",
          "group": "group@2",
          "when": "commentController == comment-sample && comment == canDelete"
        }
      ],
      "comments/comment/context": [
        {
          "command": "auditor.cancelsaveNote",
          "group": "inline@1",
          "when": "commentController == comment-sample"
        },
        {
          "command": "auditor.saveNote",
          "group": "inline@2",
          "when": "commentController == comment-sample"
        }
      ]
    },
    "colors": [
      {
        "id": "auditor.reviewedBackground",
        "description": "Background decoration color for reviewed lines",
        "defaults": {
          "dark": "#FFF00055",
          "light": "#FFF00055",
          "highContrast": "#FFF00055"
        }
      },
      {
        "id": "auditor.modifiedBackground",
        "description": "Background decoration color for modified lines",
        "defaults": {
          "dark": "#FF000055",
          "light": "#FF000055",
          "highContrast": "#FF000055"
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "node-fetch": "2"
  }
}