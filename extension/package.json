{
  "name": "auditor",
  "displayName": "auditor",
  "description": "Track and manage audits/reviews of large code changes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auditor.markAsReviewed",
        "title": "Mark lines as reviewed"
      },
      {
        "command": "auditor.markAsModified",
        "title": "Mark lines as modified"
      },
      {
        "command": "auditor.clearReviews",
        "title": "Mark lines as cleared"
      }
    ],
    "colors": [
      {
        "id": "auditor.reviewedBackground",
        "description": "Background decoration color for reviewed lines",
        "defaults": {
          "dark": "#FFF00055",
          "light": "#FFF00055",
          "highContrast": "#FFF00055"
        }
      },
      {
        "id": "auditor.modifiedBackground",
        "description": "Background decoration color for modified lines",
        "defaults": {
          "dark": "#FF000055",
          "light": "#FF000055",
          "highContrast": "#FF000055"
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "node-fetch": "2"
  }
}
